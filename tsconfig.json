{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "es2021",
        "dom"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "jsx": "react",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "types",
      "emitDeclarationOnly": true,
      "typeRoots": [
        "./src/declarations.d.ts"
      ]
    },
    "include": [
      "src"
    ]
  }